<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rlt_top"
            android:background="@color/main">
        
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_menu"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/tv_date"
                android:textColor="@color/white"
                android:textSize="@dimen/text"
                android:text="2012.2.2"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_orange_circle"
                android:id="@+id/tv_type"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text"
                android:text="周"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_add"
            android:scaleType="centerInside"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/bg_main_2_white"
            android:layout_below="@+id/rlt_top"
            />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        android:layout_gravity="left"
        android:id="@+id/rlt_left"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/selector_bg_main_con"
            android:id="@+id/tv_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/text"
            android:text="设置"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/tv_about"
            android:background="@drawable/selector_bg_main_con"
            android:textColor="@color/white"
            android:textSize="@dimen/text"
            android:text="关于"
            android:gravity="center"
            android:layout_below="@+id/tv_setting"
            />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>